<p id="notice"><%= notice %></p>

<h1>Concerts</h1>

<table class= "container">
  <thead class="p-3 mb-2 bg-success text-white">
    <tr>
      <th>Location</th>
      <th>Date</th>
      <th>Quantity</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @concerts.each do |concert| %>
      <tr>
        <td><%= concert.location %></td>
        <td><%= concert.date %></td>
        <td><%= concert.quantity %></td>
        <td><%= concert.duration %></td>
        <td><%= link_to 'Show', band_concert_path(@band, concert) %></td>
        <td><%= link_to 'Edit', edit_band_concert_path(@band, concert) %></td>
        <td><%= link_to 'Destroy', band_concert_path(@band, concert), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="p-3 mb-2 bg-info text-white">
<%= link_to 'New Concert', new_band_concert_path(@band)%>
</div>