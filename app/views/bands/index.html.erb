<p id="notice"><%= notice %></p>

<h1>Bands</h1>

<table class= "container">
  <thead class="p-3 mb-2 bg-success text-white">
    <tr>
      <th>Name</th>
      <th>Kind</th>
      <th>Start date</th>
      <th>Band Concerts</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @bands.each do |band| %>
      <tr>
        <td><%= band.name %></td>
        <td><%= band.kind %></td>
        <td><%= band.start_date %></td>
        <td><%= band.concerts.count%></td>
        <td><%= link_to 'Show', band %></td>
        <td><%= link_to 'Edit', edit_band_path(band) %></td>
        <td><%= link_to 'Destroy', band, method: :delete, data: { confirm: 'Are you sure?' } %></td>      
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="p-3 mb-2 bg-danger text-white">
<%= link_to 'New Band', new_band_path %>
</div>
